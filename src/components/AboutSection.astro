---
import { getTranslations } from '../i18n';
import '../styles/global.css';
import Carousel from './Carousel.astro';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Carousel images
const carouselImages = [
  {
    src: "/images/about-carousel-1.webp",
    alt: `${t.aboutSection.imageAlt} #1`
  },
  {
    src: "/images/about-carousel-2.webp", 
    alt: `${t.aboutSection.imageAlt} #2`
  },
  {
    src: "/images/about-carousel-3.webp",
    alt: `${t.aboutSection.imageAlt} #3`
  },
  {
    src: "/images/about-carousel-4.webp",
    alt: `${t.aboutSection.imageAlt} #4`
  },
  {
    src: "/images/about-carousel-5.webp",
    alt: `${t.aboutSection.imageAlt} #5`
  }
];
---

<section class="about-section relative overflow-hidden">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 py-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Carousel Section -->
      <div class="order-1">
        <Carousel 
          images={carouselImages}
          carouselId="about-carousel"
          className="lg:justify-start"
        />
      </div>

      <!-- Text Content -->
      <div class="text-center lg:text-left space-y-10 order-2 relative">
        <!-- Title -->
        <div class="relative">
          <h2 class="text-[1.3rem] md:text-[1.8rem] font-semibold text-purple-jm leading-tight whitespace-nowrap">
            {t.aboutSection.title}
          </h2>
        </div>
        
        <!-- Description -->
        <div class="space-y-6">
          <p class="text-[1.1rem] md:text-[1.5rem] text-black leading-relaxed font-light max-w-2xl mx-auto lg:mx-0">
            {t.aboutSection.description}
          </p>
        </div>
      </div>
      
    </div>
  </div>
</section> 