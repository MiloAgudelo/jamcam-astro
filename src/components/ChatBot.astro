---
import { getChatbotTranslations } from '../i18n/chatbot';

const locale = Astro.currentLocale || 'es';
const chatbot = getChatbotTranslations(locale);
---

<div class="chatbot-container fixed bottom-[85px] right-5 z-[1100] transition-opacity duration-300 ease-linear">
  <!-- Floating Button -->
  <button 
    id="chatbot-button"
    class="chatbot-button w-[50px] h-[50px] rounded-full shadow-lg cursor-pointer transition-all duration-300 ease-linear border-0 p-0 relative hover:scale-105 overflow-hidden z-[1100]"
    aria-label={chatbot.title}
    aria-expanded="false"
    aria-controls="chatbot-panel"
    title={chatbot.title}
  >
    <img src="/images/cholao-chat.png" alt="Cholao" class="w-full h-full object-cover" />
  </button>
  
  <!-- Chat Panel -->
  <div 
    id="chatbot-panel"
    class="chatbot-panel absolute bottom-0 right-[65px] w-[360px] md:w-[400px] bg-white rounded-lg shadow-2xl opacity-0 transform translate-y-5 transition-all duration-300 ease-linear pointer-events-none overflow-hidden flex flex-col z-[1100]"
    style="max-height: 600px; height: 600px;"
  >
    <!-- Header -->
    <div class="chatbot-header bg-purple-jm text-white px-4 py-3 flex items-center justify-between flex-shrink-0">
      <div class="flex items-center gap-2.5">
        <img src="/images/cholao-chat.png" alt="Cholao" class="w-[32px] h-[32px] rounded-full object-cover" />
        <span class="font-bold text-lg">{chatbot.title}</span>
      </div>
      <button 
        id="chatbot-close"
        class="text-white hover:text-gray-200 transition-colors text-3xl leading-none"
        aria-label={chatbot.close}
      >
        √ó
      </button>
    </div>
    
    <!-- Messages Area - Scrollable, takes remaining space -->
    <div id="chatbot-messages" class="chatbot-messages flex-1 overflow-y-auto p-4 space-y-3 bg-gray-50 min-h-0">
      <!-- Messages will be inserted here by JavaScript -->
    </div>
    
    <!-- Options Area - Scrollable if needed -->
    <div id="chatbot-options" class="chatbot-options p-3 bg-white border-t border-gray-200 gap-2 flex-shrink-0 overflow-y-auto" style="max-height: 280px;">
      <!-- Options will be inserted here by JavaScript -->
    </div>
    
    <!-- Footer with Reset Button - Always visible -->
    <div class="chatbot-footer px-3 pb-3 pt-2 bg-white flex gap-2 flex-shrink-0">
      <button 
        id="chatbot-reset"
        class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded-lg transition-colors text-sm"
      >
        {chatbot.restart}
      </button>
    </div>
  </div>
</div>

<script define:vars={{ chatbot: chatbot }}>
  // Constants
  const TYPING_DELAY = 600; // ms para animaci√≥n de escribiendo
  
  const chatbotButton = document.getElementById('chatbot-button');
  const chatbotPanel = document.getElementById('chatbot-panel');
  const chatbotClose = document.getElementById('chatbot-close');
  const chatbotReset = document.getElementById('chatbot-reset');
  const chatbotMessages = document.getElementById('chatbot-messages');
  const chatbotOptions = document.getElementById('chatbot-options');
  
  let currentNode = 'welcome';
  let isOpen = false;
  let conversationHistory = [];
  let messageHistory = []; // Guardar HTML de mensajes para goBack
  let isProcessing = false; // Flag para evitar clicks m√∫ltiples

  // Initialize chatbot
  function init() {
    if (chatbotButton && chatbotPanel) {
      // Button click to toggle
      chatbotButton.addEventListener('click', (e) => {
        e.stopPropagation();
        if (isOpen) {
          closeChatbot();
        } else {
          openChatbot();
        }
      });

      // Close button
      if (chatbotClose) {
        chatbotClose.addEventListener('click', (e) => {
          e.stopPropagation();
          closeChatbot();
        });
      }

      // Reset button
      if (chatbotReset) {
        chatbotReset.addEventListener('click', (e) => {
          e.stopPropagation();
          resetChat();
        });
      }

      // Prevent clicks inside the panel from closing it
      chatbotPanel.addEventListener('click', (e) => {
        e.stopPropagation();
      });

      // Handle escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isOpen) {
          closeChatbot();
        }
      });
    }
  }

  function openChatbot() {
    if (chatbotPanel && chatbotButton) {
      isOpen = true;
      chatbotPanel.classList.remove('opacity-0', 'translate-y-5', 'pointer-events-none');
      chatbotPanel.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
      chatbotButton.setAttribute('aria-expanded', 'true');
      
      // Show welcome message if first time opening
      if (conversationHistory.length === 0) {
        isProcessing = false; // Reset processing state
        showNodeInstant('welcome'); // Show welcome instantly without typing animation
      }
    }
  }

  function closeChatbot() {
    if (chatbotPanel && chatbotButton) {
      isOpen = false;
      chatbotPanel.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
      chatbotPanel.classList.add('opacity-0', 'translate-y-5', 'pointer-events-none');
      chatbotButton.setAttribute('aria-expanded', 'false');
    }
  }

  function resetChat() {
    conversationHistory = [];
    messageHistory = [];
    currentNode = 'welcome';
    isProcessing = false;
    if (chatbotMessages) {
      chatbotMessages.innerHTML = '';
    }
    showNodeInstant('welcome'); // Show instantly when resetting
  }

  function showNode(nodeId) {
    const node = chatbot.nodes[nodeId];
    if (!node) {
      console.error('Node not found:', nodeId);
      // Mostrar mensaje de error amigable al usuario
      addMessage('‚ö†Ô∏è Lo siento, hubo un error. Volviendo al men√∫ principal...');
      setTimeout(() => {
        showNode('welcome');
      }, 2000);
      return;
    }

    currentNode = nodeId;
    
    // Add message to conversation with typing animation
    // Check if node has image or download properties
    const imageUrl = node.image || null;
    const downloadUrl = node.download || null;
    const downloadLabel = node.downloadLabel || null;
    addMessageWithTyping(node.message, imageUrl, downloadUrl, downloadLabel);
    
    // Show options after message appears
    setTimeout(() => {
      showOptions(node.options);
      isProcessing = false; // Permitir nuevos clicks
    }, TYPING_DELAY + 100);
    
    // Add to history
    conversationHistory.push(nodeId);
  }

  function showNodeInstant(nodeId) {
    const node = chatbot.nodes[nodeId];
    if (!node) {
      console.error('Node not found:', nodeId);
      addMessage('‚ö†Ô∏è Lo siento, hubo un error. Volviendo al men√∫ principal...');
      setTimeout(() => {
        showNodeInstant('welcome');
      }, 2000);
      return;
    }

    currentNode = nodeId;
    
    // Add message instantly without typing animation
    const imageUrl = node.image || null;
    const downloadUrl = node.download || null;
    const downloadLabel = node.downloadLabel || null;
    addMessage(node.message, imageUrl, downloadUrl, downloadLabel);
    
    // Show options immediately
    showOptions(node.options);
    isProcessing = false;
    
    // Add to history
    conversationHistory.push(nodeId);
  }

  function addTypingIndicator() {
    if (!chatbotMessages) return null;
    
    const typingDiv = document.createElement('div');
    typingDiv.className = 'flex gap-2.5 items-start animate-fade-in';
    typingDiv.id = 'typing-indicator';
    
    typingDiv.innerHTML = `
      <img src="/images/cholao-chat.png" alt="Cholao" class="w-[26px] h-[26px] rounded-full object-cover flex-shrink-0 mt-1" />
      <div class="bg-white rounded-lg rounded-tl-none px-4 py-3 shadow-sm">
        <div class="typing-animation">
          <span class="typing-text">${chatbot.typing}</span><span class="typing-ellipsis">...</span>
        </div>
      </div>
    `;
    
    chatbotMessages.appendChild(typingDiv);
    
    // Scroll to bottom
    setTimeout(() => {
      chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
    }, 50);
    
    return typingDiv;
  }

  function removeTypingIndicator() {
    const typingIndicator = document.getElementById('typing-indicator');
    if (typingIndicator) {
      typingIndicator.remove();
    }
  }

  function addMessage(message, imageUrl = null, downloadUrl = null, downloadLabel = null) {
    if (!chatbotMessages) return;
    
    const messageDiv = document.createElement('div');
    messageDiv.className = 'flex gap-2.5 items-start animate-fade-in';
    
    let contentHTML = `<p class="text-sm leading-relaxed text-gray-800 whitespace-pre-line">${message}</p>`;
    
    // Add image if provided
    if (imageUrl) {
      contentHTML += `
        <div class="mt-3 rounded-lg overflow-hidden border border-gray-200">
          <img src="${imageUrl}" alt="Mapa JamCam 2025" class="w-full h-auto max-h-[220px] object-contain" />
        </div>
      `;
    }
    
    // Add download button if download URL provided
    if (downloadUrl) {
      const label = downloadLabel || 'Descargar mapa';
      contentHTML += `
        <a href="${downloadUrl}" download class="mt-3 inline-flex items-center gap-2 text-sm text-purple-jm hover:text-purple-800 font-semibold underline">
          <span>üì•</span>
          <span>${label}</span>
        </a>
      `;
    }
    
    messageDiv.innerHTML = `
      <img src="/images/cholao-chat.png" alt="Cholao" class="w-[26px] h-[26px] rounded-full object-cover flex-shrink-0 mt-1" />
      <div class="bg-white rounded-lg rounded-tl-none p-3.5 shadow-sm max-w-[85%]">
        ${contentHTML}
      </div>
    `;
    
    chatbotMessages.appendChild(messageDiv);
    messageHistory.push(messageDiv.outerHTML);
    
    // Scroll to bottom
    setTimeout(() => {
      chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
    }, 100);
  }

  function addMessageWithTyping(message, imageUrl = null, downloadUrl = null, downloadLabel = null) {
    if (!chatbotMessages) return;
    
    // Mostrar indicador de escribiendo
    const typingIndicator = addTypingIndicator();
    
    // Despu√©s del delay, quitar indicador y mostrar mensaje
    setTimeout(() => {
      removeTypingIndicator();
      addMessage(message, imageUrl, downloadUrl, downloadLabel);
    }, TYPING_DELAY);
  }

  function showOptions(options) {
    if (!chatbotOptions) return;
    
    // Limpiar contenido anterior
    chatbotOptions.innerHTML = '';
    
    // Remover estado dimmed
    chatbotOptions.classList.remove('options-dimmed');
    
    // Determine if we should use grid layout (more than 6 options)
    const useGrid = options.length > 6;
    
    if (useGrid) {
      chatbotOptions.classList.add('grid', 'grid-cols-2');
      chatbotOptions.classList.remove('flex', 'flex-col');
    } else {
      chatbotOptions.classList.add('flex', 'flex-col');
      chatbotOptions.classList.remove('grid', 'grid-cols-2');
    }
    
    options.forEach(option => {
      const button = document.createElement('button');
      button.className = 'bg-purple-jm hover:bg-opacity-90 text-white font-semibold py-2.5 px-3 rounded-md transition-all duration-200 text-sm text-left flex items-center gap-2 shadow-sm hover:shadow-md';
      
      const iconSpan = document.createElement('span');
      iconSpan.textContent = option.icon || '‚Ä¢';
      iconSpan.className = 'text-base flex-shrink-0';
      
      const labelSpan = document.createElement('span');
      labelSpan.textContent = option.label;
      labelSpan.className = 'leading-tight';
      
      button.appendChild(iconSpan);
      button.appendChild(labelSpan);
      
      button.addEventListener('click', (e) => {
        handleOptionClick(e, option, button);
      });
      
      chatbotOptions.appendChild(button);
    });
    
    // Scroll options to top when new options appear
    chatbotOptions.scrollTop = 0;
  }

  function handleOptionClick(event, option, clickedButton) {
    // Prevenir clicks m√∫ltiples
    if (isProcessing) return;
    
    event.stopPropagation();
    isProcessing = true;
    
    // Feedback visual: resaltar el bot√≥n clickeado y reducir opacidad de todos
    clickedButton.classList.add('ring-2', 'ring-white', 'ring-opacity-50');
    
    // Reducir opacidad pero mantener visibles
    if (chatbotOptions) {
      chatbotOptions.classList.add('options-dimmed');
    }
    
    // Ejecutar acci√≥n inmediatamente
    if (option.action === 'goto' && option.nodeId) {
      showNode(option.nodeId);
    } else if (option.action === 'link' && option.url) {
      window.open(option.url, '_blank');
      // Para links externos, restaurar opciones
      isProcessing = false;
      if (chatbotOptions) {
        chatbotOptions.classList.remove('options-dimmed');
      }
    } else if (option.action === 'back') {
      goBack();
    }
  }

  function goBack() {
    // Si no hay historial previo, ir a welcome
    if (conversationHistory.length <= 1) {
      resetChat();
      return;
    }
    
    // Remove current node from history
    conversationHistory.pop();
    messageHistory.pop(); // Tambi√©n remover el √∫ltimo mensaje
    
    // Get previous node
    const previousNode = conversationHistory[conversationHistory.length - 1];
    
    // Restaurar mensajes desde el historial
    if (chatbotMessages && messageHistory.length > 0) {
      chatbotMessages.innerHTML = messageHistory.join('');
      
      // Scroll to bottom
      setTimeout(() => {
        chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
      }, 100);
    }
    
    // Mostrar opciones del nodo anterior
    const node = chatbot.nodes[previousNode];
    if (node) {
      currentNode = previousNode;
      showOptions(node.options);
      isProcessing = false;
    } else {
      // Fallback si el nodo no existe
      resetChat();
    }
  }

  // Initialize on load
  init();
</script>

<style>
  .chatbot-panel {
    max-height: 600px;
    height: 600px;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.3s ease-out;
  }

  /* Ensure proper flex behavior */
  .chatbot-messages {
    flex: 1 1 auto;
    min-height: 0;
    overflow-y: auto;
  }

  .chatbot-options {
    flex: 0 0 auto;
    overflow-y: auto;
    max-height: 280px;
  }

  .chatbot-header,
  .chatbot-footer {
    flex: 0 0 auto;
  }

  /* Tablet adjustments */
  @media (max-width: 1024px) and (min-width: 769px) {
    .chatbot-panel {
      width: 360px !important;
      max-height: 580px;
      height: 580px;
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .chatbot-container {
      bottom: 80px;
      right: 15px;
    }

    .chatbot-button {
      width: 50px;
      height: 50px;
    }

    .chatbot-panel {
      right: 0;
      bottom: 60px;
      width: calc(100vw - 30px) !important;
      max-width: 360px;
      max-height: 520px;
      height: 520px;
    }
    
    .chatbot-options {
      max-height: 240px;
    }
  }
  
  /* Very small mobile adjustments */
  @media (max-width: 380px) {
    .chatbot-panel {
      width: calc(100vw - 20px) !important;
      max-height: 480px;
      height: 480px;
    }
    
    .chatbot-options {
      max-height: 200px;
    }
  }

  /* Custom scrollbar for messages only */
  .chatbot-messages::-webkit-scrollbar {
    width: 4px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 2px;
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: rgba(98, 37, 153, 0.3);
    border-radius: 2px;
  }

  .chatbot-messages::-webkit-scrollbar-thumb:hover {
    background: rgba(98, 37, 153, 0.5);
  }

  /* Firefox */
  .chatbot-messages {
    scrollbar-width: thin;
    scrollbar-color: rgba(98, 37, 153, 0.3) #f1f1f1;
  }

  /* Typing animation */
  .typing-animation {
    display: inline-flex;
    align-items: center;
    gap: 3px;
    font-size: 14px;
    font-weight: 500;
  }

  .typing-text {
    color: #666;
  }

  .typing-ellipsis {
    display: inline-block;
    color: #622599;
    animation: typing-blink 1.4s infinite;
    font-weight: bold;
    letter-spacing: 2px;
  }

  @keyframes typing-blink {
    0%, 100% {
      opacity: 0.2;
    }
    50% {
      opacity: 1;
    }
  }

  /* Options dimmed state */
  .options-dimmed {
    opacity: 0.4;
    pointer-events: none;
    transition: opacity 0.2s ease-out;
  }
  
  .chatbot-options {
    transition: opacity 0.3s ease-in-out;
  }
</style>

