<!-- Decorative Dotted Line in green-jm at the end -->
<div class="w-full py-8 md:py-12">
  <div class="w-screen h-1.5 md:h-1.5 rounded dotted-line-green"></div>
</div>

<style>
  /* Decorative Dotted Line in green-jm */
  .dotted-line-green {
    background-image: repeating-linear-gradient(
      to right,
      var(--color-green-jm) 0px,
      var(--color-green-jm) 30px,
      transparent 30px,
      transparent 50px
    );
  }

  @media (max-width: 768px) {
    .dotted-line-green {
      background-image: repeating-linear-gradient(
        to right,
        var(--color-green-jm) 0px,
        var(--color-green-jm) 20px,
        transparent 20px,
        transparent 35px
      );
    }
  }

  /* Custom background with yellow-jm at 12% opacity */
  .bg-yellow-jm-12 {
    background-color: rgba(252, 184, 19, 0.12); /* --color-yellow-jm with 12% opacity */
  }
</style> 