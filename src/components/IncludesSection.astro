    <!-- List with green chevrons -->
    <div class="flex justify-center">
      <ul class="space-y-4 md:space-y-6 text-left">
        {t.includes.items.map((item) => (
          <li class="flex items-start gap-4 md:gap-6">
            <!-- Font Awesome check circle icon -->
            <div class="flex-shrink-0 w-6 h-6 md:w-8 md:h-8 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-full h-full" style="fill: #73a16d;">
