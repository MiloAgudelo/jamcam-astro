---
import '../styles/global.css';

interface Props {
  icon: string;
  title: string;
  description: string;
  cardNumber: number;
}

const { icon, title, description, cardNumber } = Astro.props;

// Determine background color based on card number using global.css colors
const getCardBgColor = (num: number) => {
  switch (num) {
    case 1:
      return 'bg-pink-jm';
    case 2:
      return 'bg-green-jm';
    case 3:
      return 'bg-red-jm';
    default:
      return 'bg-pink-jm';
  }
};

const cardBgColor = getCardBgColor(cardNumber);
---

<div class={`flex items-center gap-8 md:gap-8 py-12 px-5 md:py-12 md:px-16 rounded-2xl md:rounded-[27px] shadow-[0px_4px_80px_0px_rgba(0,0,0,0.18)] relative overflow-hidden ${cardBgColor} flex-col md:flex-row text-center md:text-left`}>
  <!-- Card Icon -->
  <div class="flex-shrink-0 w-20 h-20 md:w-24 md:h-24 flex items-center justify-center mr-2 md:mr-4">
    <img 
      src={icon} 
      alt={`${title} icon`}
      class="w-full h-full object-contain filter brightness-0 invert"
    />
  </div>

  <!-- Card Content -->
  <div class="flex-1 flex flex-col gap-2 md:gap-3">
    <h3 class="text-2xl md:text-3xl font-bold text-white leading-tight">
      {title}
    </h3>
    <p class="text-sm md:text-base leading-relaxed text-white">
      {description}
    </p>
  </div>

