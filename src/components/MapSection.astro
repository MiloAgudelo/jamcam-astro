---
import '../styles/global.css';
import { getTranslations } from '../i18n';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);
---

<section class="map-section relative bg-gradient-to-b from-[#FAF9F6] to-[#F8F6FF]">
  <div class="map-content w-full max-w-6xl mx-auto px-5">
    <!-- Text Section -->
    <div class="map-text text-center pt-12 pb-8 md:pt-20 md:pb-12 relative z-10">
      <p class="map-description text-[1.1rem] md:text-[1.5rem] leading-[1.6] text-gray-800 max-w-4xl mx-auto">
        {t.cali.mapSection.description}
      </p>
    </div>

    <!-- Map SVG Section -->
    <div class="map-svg-section relative">
      <!-- Map SVG -->
      <div class="map-svg-container relative z-0">
        <img 
          src="/images/map.svg" 
          alt="Mapa de Cali y Colombia" 
          class="w-full max-w-6xl h-auto mt-8 -mb-16 md:mt-0 md:-mb-32" 
        />
      </div>

      <!-- Airport Information -->
      <div class="airport-info text-center py-8 md:py-12 relative z-10">
        <p class="text-[1.1rem] md:text-[1.5rem] leading-[1.6] text-gray-700 max-w-4xl mx-auto">
          {t.cali.mapSection.airportInfo}
        </p>
      </div>

      <!-- Recommendations Section -->
      <div class="recommendations-section max-w-5xl mx-auto pb-12 md:pb-20">
        <!-- Title -->
        <h3 class="text-[1.3rem] md:text-[1.8rem] font-bold text-purple-jm mb-6 md:mb-8 text-center">
          {t.cali.mapSection.recommendationsTitle}
        </h3>

        <!-- Recommendations List -->
        <div class="recommendations-list space-y-4 md:space-y-6">
          {t.cali.mapSection.recommendations.map((recommendation, index) => {
            const colors = ['bg-purple-jm', 'bg-orange-jm', 'bg-salmon-jm', 'bg-green-jm'];
            const dotColor = colors[index % colors.length];
            
            return (
              <div class="recommendation-item flex items-start gap-4 md:gap-5">
                <!-- Colored Dot -->
                <div class={`w-3 h-3 md:w-4 md:h-4 rounded-full ${dotColor} flex-shrink-0 mt-2`}></div>
                
                <!-- Content -->
                <div class="recommendation-content flex-1">
                  <h4 class="text-[1.1rem] md:text-[1.3rem] font-semibold text-gray-800 mb-2">
                    {recommendation.title}
                  </h4>
                  <p class="text-[1rem] md:text-[1.2rem] leading-[1.5] text-gray-600">
                    {recommendation.description}
                  </p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .map-section {
    overflow: hidden;
  }
  
  .map-svg-container {
    margin: 0 auto;
    width: 100%;
    max-width: 100%;
  }
</style>
