---
import { getCollection } from 'astro:content';
import { getTranslations } from '../i18n';
import NewsCard from './NewsCard.astro';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Get all news entries for this locale
const allNews = await getCollection('news', ({ data }) => {
  return data.locale === locale;
});

// Sort by publish date (newest first) and take the latest 3
const latestNews = allNews
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);

// Get the news page URL based on locale
const getNewsPageUrl = () => {
  if (locale === 'es') {
    return '/news';
  }
  return `/${locale}/news`;
};
---

<section class="w-full py-16" style="background-color: #FAF9F6;">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t.news.title}
      </h2>
      <div class="w-24 h-1 bg-purple-jm mx-auto"></div>
    </div>

    <!-- News Grid -->
    {latestNews.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 mb-12 max-w-7xl mx-auto">
        {latestNews.map((entry) => (
          <NewsCard entry={entry} locale={locale} />
        ))}
      </div>
    ) : (
      <p class="text-center text-gray-600 mb-12">{t.news.noNews}</p>
    )}

    <!-- View All Button -->
    <div class="text-center">
      <a
        href={getNewsPageUrl()}
        class="inline-flex items-center gap-2.5 bg-purple-jm text-white px-6 py-3 font-semibold no-underline cursor-pointer rounded-none transition-all duration-300 ease-linear shadow-[0_2px_4px_rgba(0,0,0,0.1)] hover:scale-105 hover:shadow-[0_4px_8px_rgba(0,0,0,0.2)]"
      >
        <span>{t.news.allNews}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>

