---
import { getTranslations } from '../i18n';
import { Image } from 'astro:assets';
import '../styles/global.css';
import sfhLogo from '@logos/sfh-logo.png';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);
---

<section class="safe-from-harm-section relative overflow-hidden" style="background-color: #FAF9F6;">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 pt-6 lg:pt-8 pb-12 lg:pb-16">
    
    <!-- Intro Section with Logo -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center mb-16 lg:mb-20">
      
      <!-- Logo Column -->
      <div class="order-2 lg:order-1 flex justify-center lg:justify-start">
        <Image 
          src={sfhLogo} 
          alt="Safe From Harm Logo"
          width={400}
          height={400}
          class="w-full max-w-md h-auto"
          loading="eager"
        />
      </div>

      <!-- Text Content -->
      <div class="order-1 lg:order-2 text-center lg:text-left space-y-6">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-purple-jm leading-tight">
          {t.safeFromHarm.intro.title}
        </h1>
        <p class="text-lg md:text-xl text-black leading-relaxed font-light">
          {t.safeFromHarm.intro.description}
        </p>
        {t.safeFromHarm.intro.exploreText && (
          <p class="text-base md:text-lg text-black leading-relaxed font-light">
            {t.safeFromHarm.intro.exploreText}
          </p>
        )}
        <a 
          href={t.safeFromHarm.codeOfConduct.documentUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-purple-jm hover:bg-purple-800 text-white font-semibold py-3 px-8 rounded-lg transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          {t.safeFromHarm.codeOfConduct.downloadButton}
        </a>
      </div>
    </div>

    <!-- Responsibilities Section -->
    <div class="mb-16 lg:mb-20">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-purple-jm leading-tight text-center mb-6">
        {t.safeFromHarm.responsibilities.title}
      </h2>
      <p class="text-base md:text-lg text-black leading-relaxed font-light text-center max-w-3xl mx-auto mb-12">
        {t.safeFromHarm.responsibilities.description}
      </p>
      
      <!-- Responsibility Items Grid -->
      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {t.safeFromHarm.responsibilities.items.map((item, index) => (
          <div class={`bg-white rounded-lg p-6 lg:p-8 shadow-sm hover:shadow-md transition-shadow ${index === 2 ? 'md:col-span-2' : ''}`}>
            <h3 class="text-xl md:text-2xl font-semibold text-purple-jm mb-4">
              {item.title}
            </h3>
            <p class="text-base md:text-lg text-black leading-relaxed font-light mb-4">
              {item.description}
            </p>
            {item.methods && (
              <ul class="space-y-2 text-base md:text-lg text-black leading-relaxed font-light">
                {item.methods.map((method) => (
                  <li class="flex items-start">
                    <span class="text-purple-jm mr-2">â€¢</span>
                    <span>{method}</span>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Listening Ears Section -->
<div class="border-2 border-purple-jm rounded-lg p-8 lg:p-12 bg-white">
  <div class="max-w-4xl mx-auto space-y-6 text-center">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-purple-jm leading-tight">
      {t.safeFromHarm.listeningEars.title}
    </h2>
    <p class="text-base md:text-lg lg:text-xl leading-relaxed font-light text-black">
      {t.safeFromHarm.listeningEars.description}
    </p>
    <p class="text-base md:text-lg lg:text-xl leading-relaxed font-light text-black">
      {t.safeFromHarm.listeningEars.additionalInfo}
    </p>
  </div>
</div>

  </div>
</section>

<style>
  .safe-from-harm-section {
    min-height: auto;
  }
</style>

