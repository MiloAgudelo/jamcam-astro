---
import { getTranslations } from '../i18n';
import '../styles/global.css';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Carousel images for second section
const carouselImages = [
  {
    src: "/src/assets/service-team-carousel-6.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #6`
  },
  {
    src: "/src/assets/service-team-carousel-7.webp", 
    alt: `${t.serviceTeamInfoSection.imageAlt} #7`
  },
  {
    src: "/src/assets/service-team-carousel-8.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #8`
  },
  {
    src: "/src/assets/service-team-carousel-9.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #9`
  },
  {
    src: "/src/assets/service-team-carousel-10.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #10`
  }
];
---

<section class="service-team-info-section relative overflow-hidden" style="background-color: #2476b6;">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 py-12">
    
    <!-- First Row - What is IST -->
    <div class="mb-16">
      <div class="text-left space-y-6">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-yellow-jm leading-tight">
          {t.serviceTeamInfoSection.whatIsTitle}
        </h2>
        <p class="text-base md:text-lg lg:text-xl text-white leading-relaxed font-light max-w-5xl">
          {t.serviceTeamInfoSection.whatIsDescription}
        </p>
      </div>
    </div>

    <!-- Second Row - Who can participate + Carousel -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- First Column - Who can participate -->
      <div class="order-1 text-left space-y-6">
        <!-- Decorative white line -->
        <div class="w-full h-1 bg-white mb-8"></div>
        
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-yellow-jm leading-tight">
          {t.serviceTeamInfoSection.whoCanParticipateTitle}
        </h2>
        <p class="text-base md:text-lg lg:text-xl text-white leading-relaxed font-light">
          {t.serviceTeamInfoSection.whoCanParticipateDescription}
        </p>
      </div>

      <!-- Second Column - Carousel Section -->
      <div class="order-2 flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Main Carousel Container -->
          <div 
            id="service-team-info-carousel" 
            class="relative w-80 h-80 md:w-96 md:h-96 lg:w-[450px] lg:h-[450px] rounded-lg overflow-hidden"
          >
            <!-- Image Slides -->
            {carouselImages.map((image, index) => (
              <div 
                class={`carousel-slide absolute inset-0 transition-opacity duration-500 ease-in-out ${
                  index === 0 ? 'opacity-100' : 'opacity-0'
                }`}
                data-slide-index={index}
              >
                <img 
                  src={image.src}
                  alt={image.alt}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>

<script>
  class ServiceTeamInfoCarousel {
    private carousel: HTMLElement | null;
    private slides: NodeListOf<Element>;
    private currentSlide: number = 0;
    private totalSlides: number;
    private intervalId: number | null = null;

    constructor() {
      this.carousel = document.getElementById('service-team-info-carousel');
      this.slides = document.querySelectorAll('#service-team-info-carousel .carousel-slide');
      this.totalSlides = this.slides.length;
      
      if (this.carousel && this.slides.length > 0) {
        this.init();
      }
    }

    init() {
      // Start auto-rotation
      this.startAutoRotation();
    }

    showSlide(index: number) {
      // Update slides
      this.slides.forEach((slide, i) => {
        const slideElement = slide as HTMLElement;
        if (i === index) {
          slideElement.classList.remove('opacity-0');
          slideElement.classList.add('opacity-100');
        } else {
          slideElement.classList.remove('opacity-100');
          slideElement.classList.add('opacity-0');
        }
      });
    }

    nextSlide() {
      this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
      this.showSlide(this.currentSlide);
    }

    startAutoRotation() {
      this.pauseAutoRotation();
      this.intervalId = window.setInterval(() => {
        this.nextSlide();
      }, 4000);
    }

    pauseAutoRotation() {
      if (this.intervalId) {
        clearInterval(this.intervalId);
        this.intervalId = null;
      }
    }
  }

  // Initialize carousel when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new ServiceTeamInfoCarousel();
  });
</script>

<style>
  .carousel-slide {
    transition: opacity 500ms ease-in-out;
  }
</style> 