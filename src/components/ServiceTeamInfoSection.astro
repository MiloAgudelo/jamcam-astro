---
import { getTranslations } from '../i18n';
import '../styles/global.css';
import Carousel from './Carousel.astro';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Carousel images for second section
const carouselImages = [
  {
    src: "/src/assets/service-team-carousel-6.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #6`
  },
  {
    src: "/src/assets/service-team-carousel-7.webp", 
    alt: `${t.serviceTeamInfoSection.imageAlt} #7`
  },
  {
    src: "/src/assets/service-team-carousel-8.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #8`
  },
  {
    src: "/src/assets/service-team-carousel-9.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #9`
  },
  {
    src: "/src/assets/service-team-carousel-10.webp",
    alt: `${t.serviceTeamInfoSection.imageAlt} #10`
  }
];
---

<section class="service-team-info-section relative overflow-hidden" style="background-color: #2476b6;">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 py-12">
    
    <!-- First Row - What is IST -->
    <div class="mb-16">
      <div class="text-left space-y-6">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-yellow-jm leading-tight">
          {t.serviceTeamInfoSection.whatIsTitle}
        </h2>
        <p class="text-base md:text-lg lg:text-xl text-white leading-relaxed font-light max-w-5xl">
          {t.serviceTeamInfoSection.whatIsDescription}
        </p>
      </div>
    </div>

    <!-- Second Row - Who can participate + Carousel -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- First Column - Who can participate -->
      <div class="order-1 text-left space-y-6">
        <!-- Decorative white line -->
        <div class="w-full h-1 bg-white mb-8"></div>
        
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-yellow-jm leading-tight">
          {t.serviceTeamInfoSection.whoCanParticipateTitle}
        </h2>
        <p class="text-base md:text-lg lg:text-xl text-white leading-relaxed font-light">
          {t.serviceTeamInfoSection.whoCanParticipateDescription}
        </p>
      </div>

      <!-- Second Column - Carousel Section -->
      <div class="order-2">
        <Carousel 
          images={carouselImages}
          carouselId="service-team-info-carousel"
          className="lg:justify-end"
        />
      </div>
      
    </div>
  </div>
</section>

 