---
import { getTranslations } from '../i18n';
import '../styles/global.css';
import Carousel from './Carousel.astro';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Carousel images
const carouselImages = [
  {
    src: "/images/service-team-carousel-1.webp",
    alt: `${t.serviceTeamIntroSection.imageAlt} #1`
  },
  {
    src: "/images/service-team-carousel-2.webp", 
    alt: `${t.serviceTeamIntroSection.imageAlt} #2`
  },
  {
    src: "/images/service-team-carousel-3.webp",
    alt: `${t.serviceTeamIntroSection.imageAlt} #3`
  },
  {
    src: "/images/service-team-carousel-4.webp",
    alt: `${t.serviceTeamIntroSection.imageAlt} #4`
  },
  {
    src: "/images/service-team-carousel-5.webp",
    alt: `${t.serviceTeamIntroSection.imageAlt} #5`
  }
];
---

<section class="service-team-intro-section relative overflow-hidden">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 py-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Carousel Section -->
      <div class="order-1">
        <Carousel 
          images={carouselImages}
          carouselId="service-team-carousel"
          className="lg:justify-start"
        />
      </div>

      <!-- Text Content -->
      <div class="text-center lg:text-left space-y-8 order-2 relative">
        
        <!-- Description -->
        <div class="space-y-6">
          <p class="text-base md:text-lg lg:text-xl text-black leading-relaxed font-light max-w-2xl mx-auto lg:mx-0">
            {t.serviceTeamIntroSection.description1}
          </p>
          <p class="text-base md:text-lg lg:text-xl text-black leading-relaxed font-light max-w-2xl mx-auto lg:mx-0">
            {t.serviceTeamIntroSection.description2}
          </p>
        </div>
      </div>
      
    </div>
  </div>
</section>

 