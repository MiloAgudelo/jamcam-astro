---
import { getTranslations } from '../i18n';
import '../styles/global.css';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);
---

<section class="service-team-key-dates-section bg-light-purple-jm py-12">
  <!-- Title Section with full width yellow background -->
  <div class="w-full bg-yellow-jm py-6 mb-12">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-black text-center">
        {t.serviceTeamKeyDatesSection.title}
      </h2>
    </div>
  </div>

  <!-- Cards Container -->
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- Card 1: EIS Arrival -->
      <div class="key-date-card rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 relative overflow-hidden">
        <!-- Decorative Element -->
        <div class="absolute top-30 left-4 transform -translate-y-1/2 z-10">
          <img src="/src/assets/x-x-x.svg" alt="" class="w-16 h-16" style="filter: hue-rotate(25deg) brightness(1.2);" />
        </div>
        <!-- Title Row with reduced opacity -->
        <div class="bg-orange-jm/70 p-6 text-center min-h-[120px] flex items-center justify-center">
          <h3 class="text-xl md:text-2xl font-semibold text-white">
            {t.serviceTeamKeyDatesSection.eisArrival.title}
          </h3>
        </div>
        <!-- Date Row with full color -->
        <div class="bg-orange-jm p-6 text-center min-h-[80px] flex items-center justify-center">
          <p class="text-base md:text-lg text-white font-medium">
            {t.serviceTeamKeyDatesSection.eisArrival.date}
          </p>
        </div>
      </div>

      <!-- Card 2: JamCam Start -->
      <div class="key-date-card rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 relative overflow-hidden">
        <!-- Title Row with reduced opacity -->
        <div class="bg-purple-jm/70 p-6 text-center min-h-[120px] flex items-center justify-center">
          <h3 class="text-xl md:text-2xl font-semibold text-white">
            {t.serviceTeamKeyDatesSection.jamcamStart.title}
          </h3>
        </div>
        <!-- Date Row with full color -->
        <div class="bg-purple-jm p-6 text-center min-h-[80px] flex items-center justify-center">
          <p class="text-base md:text-lg text-white font-medium">
            {t.serviceTeamKeyDatesSection.jamcamStart.date}
          </p>
        </div>
      </div>

      <!-- Card 3: EIS Departure -->
      <div class="key-date-card rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 md:col-span-2 lg:col-span-1 relative overflow-hidden">
        <!-- Decorative Element -->
        <div class="absolute top-30 right-4 transform -translate-y-1/2 z-10">
          <img src="/src/assets/x-x-x.svg" alt="" class="w-16 h-16" style="filter: hue-rotate(180deg) brightness(1.3);" />
        </div>
        <!-- Title Row with reduced opacity -->
        <div class="bg-green-jm/70 p-6 text-center min-h-[120px] flex items-center justify-center">
          <h3 class="text-xl md:text-2xl font-semibold text-white">
            {t.serviceTeamKeyDatesSection.eisDeparture.title}
          </h3>
        </div>
        <!-- Date Row with full color -->
        <div class="bg-green-jm p-6 text-center min-h-[80px] flex items-center justify-center">
          <p class="text-base md:text-lg text-white font-medium">
            {t.serviceTeamKeyDatesSection.eisDeparture.date}
          </p>
        </div>
      </div>

    </div>
  </div>
</section> 