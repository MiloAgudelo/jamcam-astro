---
import { getTranslations } from '../i18n';
import '../styles/global.css';
import Carousel from './Carousel.astro';

const locale = Astro.currentLocale || 'es';
const t = getTranslations(locale);

// Carousel images for roles section (images 11-15)
const carouselImages = [
  {
    src: "/images/service-team-carousel-11.webp",
    alt: `${t.serviceTeamRolesSection.imageAlt} #1`
  },
  {
    src: "/images/service-team-carousel-12.webp", 
    alt: `${t.serviceTeamRolesSection.imageAlt} #2`
  },
  {
    src: "/images/service-team-carousel-13.webp",
    alt: `${t.serviceTeamRolesSection.imageAlt} #3`
  },
  {
    src: "/images/service-team-carousel-14.webp",
    alt: `${t.serviceTeamRolesSection.imageAlt} #4`
  },
  {
    src: "/images/service-team-carousel-15.webp",
    alt: `${t.serviceTeamRolesSection.imageAlt} #5`
  }
];
---

<section class="service-team-roles-section relative overflow-hidden">
  <!-- Main Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-12 py-12">
    
    <!-- Section Title -->
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-left text-orange-jm">
        {t.serviceTeamRolesSection.title}
      </h2>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Carousel Section -->
      <div class="order-1">
        <Carousel 
          images={carouselImages}
          carouselId="service-team-roles-carousel"
          className="lg:justify-start"
        />
      </div>

      <!-- Text Content -->
      <div class="text-center lg:text-left space-y-8 order-2 relative">
        
        <!-- Description -->
        <div class="space-y-6">
          <p class="text-base md:text-lg lg:text-xl text-black leading-relaxed font-light max-w-2xl mx-auto lg:mx-0">
            {t.serviceTeamRolesSection.description1}
          </p>
          <p class="text-base md:text-lg lg:text-xl text-black leading-relaxed font-light max-w-2xl mx-auto lg:mx-0">
            {t.serviceTeamRolesSection.description2}
          </p>
        </div>
      </div>
      
    </div>
  </div>
</section> 